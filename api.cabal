name:              api
version:           0.0.0
cabal-version:     >= 1.8
build-type:        Custom

Flag dev
    Description:   Turn on development settings, like auto-reload templates.
    Default:       False

Flag library-only
    Description:   Build for use with "yesod devel"
    Default:       False

library
    hs-source-dirs: ., app
    exposed-modules: Application
                     Foundation
                     Import
                     Import.NoFoundation
                     Model
                     Settings
                     Settings.StaticFiles
                     Handler.Common
                     Handler.Home
                     Handler.Query
                     Handler.TransactionInfo
                     Handler.AccountInfo
                     Handler.BlockInfo
                     Handler.TxHash
                     Handler.TxAddress
                     Handler.BlkNumber
                     Handler.BlkGas
                     Handler.BlkGasRange
                     Handler.BlkNumberRange
                     Handler.BlkTimeRange
                     Handler.BlkId
                     Handler.AccAddress
                     Handler.AccNonce
                     Handler.AccBalance
                     Handler.BlkDifficulty
                     Handler.BlkHash
                     Handler.BlkLast
                     Handler.Demo
                     Handler.JsonJuggler
                     Handler.BlkCoinbase,
                     Handler.Filters
                     Handler.Help
                     Handler.TxLast
                     Handler.Test
                     Handler.BlkTxAddress,
                     Handler.IncludeTransaction,
                     Handler.QueuedTransactions,
                     Handler.PushTransaction
                     Handler.Stats

    if flag(dev) || flag(library-only)
        cpp-options:   -DDEVELOPMENT
        ghc-options:   -Wall -fwarn-tabs -O0
    else
        ghc-options:   -Wall -fwarn-tabs -O2

    extensions: TemplateHaskell
                QuasiQuotes
                OverloadedStrings
                NoImplicitPrelude
                CPP
                MultiParamTypeClasses
                TypeFamilies
                GADTs
                GeneralizedNewtypeDeriving
                FlexibleContexts
                EmptyDataDecls
                NoMonomorphismRestriction
                DeriveDataTypeable
                ViewPatterns
                TupleSections
                RecordWildCards

    build-depends: base                          >= 4          
                 , yesod                         >= 1.4.1      
                 , yesod-core                    >= 1.4.6      
                 , yesod-static                  >= 1.4.0.3    
                 , yesod-form                    >= 1.4.0      
                 , classy-prelude                >= 0.10.2
                 , classy-prelude-conduit        >= 0.10.2
                 , classy-prelude-yesod          >= 0.10.2
                 , bytestring                    >= 0.9        
                 , text                          >= 0.11       
                 , persistent                    >= 2.0        
                 , persistent-postgresql         >= 2.1.1      
                 , persistent-template           >= 2.0        
                 , template-haskell
                 , shakespeare                   >= 2.0        
                 , hjsmin                        >= 0.1        
                 , monad-control                 >= 0.3        
                 , wai-extra                     >= 3.0        
                 , yaml                          >= 0.8        
                 , http-conduit                  >= 2.1        
                 , directory                     >= 1.1        
                 , warp                          >= 3.0        
                 , data-default
                 , aeson                         >= 0.6        
                 , conduit                       >= 1.0        
                 , monad-logger                  >= 0.3        
                 , fast-logger                   >= 2.2        
                 , wai-logger                    >= 2.2        
                 , file-embed
                 , safe
                 , unordered-containers
                 , containers
                 , vector
                 , time
                 , ethereum-data-sql
                 , ethereum-merkle-patricia-db
                 , esqueleto
                 , ethereum-rlp
                 , base16-bytestring
                 , old-locale
                 , ethereum-util
                 , transformers
                 , postgresql-simple
                 , postgresql-libpq

executable         api
    if flag(library-only)
        Buildable: False

    main-is:           main.hs
    hs-source-dirs:    app
    build-depends:     base, api

    ghc-options:       -threaded -O2 -rtsopts -with-rtsopts=-N

test-suite test
    type:              exitcode-stdio-1.0
    main-is:           Main.hs
    hs-source-dirs:    test
    ghc-options:       -Wall

    extensions: TemplateHaskell
                QuasiQuotes
                OverloadedStrings
                NoImplicitPrelude
                CPP
                MultiParamTypeClasses
                TypeFamilies
                GADTs
                GeneralizedNewtypeDeriving
                FlexibleContexts
                EmptyDataDecls
                NoMonomorphismRestriction
                DeriveDataTypeable
                ViewPatterns
                TupleSections

    build-depends: base
                 , api
                 , yesod-test >= 1.4.3 && < 1.5
                 , yesod-core
                 , yesod
                 , persistent
                 , persistent-postgresql
                 , resourcet
                 , monad-logger
                 , transformers
                 , hspec >= 2.0.0
                 , classy-prelude
                 , classy-prelude-yesod
                 , hspec-wai
                 , hspec-wai-json
                 , warp
                 , wai
                 , wai-extra
                 , HUnit
                 , bytestring
                 , text
                 , ethereum-data-sql
                 , aeson
                 , blaze-html
                 , blaze-markup
                 , timeit
